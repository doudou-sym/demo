{% extends 'base.html.twig' %}


{% block body %}
	<h1>Inscription sur le site</h1>
	{{ form_start(formUser)}}


	{{ form_row (formUser.username, {'label':'Nom de l\'utilisater','attr':{'placeholder':'Nom de l\'utilisater ...'}}) }}
    {{ form_row (formUser.email, {'label':'Adresse email','attr':{'placeholder':'Adresse email ...'}}) }}
	{{ form_row (formUser.password, {'label':'Mot de passe', 'attr':{'placeholder':'Mot de passe!'}})}}
